<Window x:Class="NovelkaCreationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:NovelkaCreationTool"
        xmlns:vm="clr-namespace:NovelkaCreationTool.ViewModels"
        xmlns:converter="clr-namespace:NovelkaCreationTool.Infrastructure.Converters"
        mc:Ignorable="d"
        Title="NovelkaCreationTool" Height="450" Width="800"
        Background="LightGray"
        >

    <Window.Resources>
        <vm:SlidesViewModel x:Key="SlidesViewModel"/>
        <converter:PathToImageLoaderConverter x:Key="PathToImageLoaderConverter"/>
        <converter:FullFileNameToShortNameConverter x:Key="FullFileNameToShortConverter"/>
    </Window.Resources>

    <Grid Name="MainGrid" DataContext="{StaticResource SlidesViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Name="TabMenuRow" Height="125"/>
            <RowDefinition Name="SlidesRow" Height="*"/>
            <RowDefinition Name="StatusRow"  Height="20"/>
        </Grid.RowDefinitions>


        <TabControl Grid.Row="0">

            <TabItem Name="SlidesTabItem" Header="Слайды">
                <WrapPanel>
                    <Button Name="AddSlideButton" Command="{Binding AddSlideCommand}">
                        Добавить слайд
                    </Button>
                    <Button Name="DeleteSlideButton" Command="{Binding DeleteSlideCommand}">
                        Удалить слайд
                    </Button>
                </WrapPanel>
            </TabItem>
            <TabItem Name="BackgroundTabItem" Header="Картинки">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding Path=LoadBackgroundsListCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <WrapPanel Grid.Column="2">
                        <Button Command="{Binding AddImageToSlideCommand}">
                            Добавить на слайд
                        </Button>
                    </WrapPanel>
                    <ListBox Name="BackgroundsList" Grid.Column="0"
                             SelectedItem="{Binding SelectedBackground}"
                             ItemsSource="{Binding Backgrounds}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Image Grid.Column="1"
                           Source="{Binding SelectedBackground.FullName, Converter={StaticResource PathToImageLoaderConverter}}"/>
                </Grid>
            </TabItem>
            <TabItem Name="SlideImagesTabItem" Header="Картинки слайда">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListBox Name="SlideImagesListBox" ItemsSource="{Binding Path=SelectedSlide.Images}"
                             SelectedItem="{Binding Path=SelectedSlideImage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Path=Name}" HorizontalAlignment="Center"/>
                                    <Image Source="{Binding Path=ImageName, Converter={StaticResource PathToImageLoaderConverter}}"
                                           Width="100"
                                           Height="50"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu DataContext="{StaticResource SlidesViewModel}">
                                            <MenuItem Header="Delete" Command="{Binding Path=DeleteSlideCommand}"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <!--<UniformGrid Grid.Column="1" Columns="4" Rows="4">
                        <Label>
                            Ширина
                        </Label>
                        <TextBox
                                 Text="{Binding Path=SelectedSlideImage.Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label>
                            Высота
                        </Label>
                        <TextBox 
                                 Text="{Binding Path=SelectedSlideImage.Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label>
                            X
                        </Label>
                        <TextBox
                                 Text="{Binding Path=SelectedSlideImage.X, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label>
                            Y
                        </Label>
                        <TextBox
                                 Text="{Binding Path=SelectedSlideImage.Y, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label>
                            Z
                        </Label>
                        <TextBox
                                 Text="{Binding Path=SelectedSlideImage.Z, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label>
                            Name
                        </Label>
                        <TextBox
                                 Text="{Binding Path=SelectedSlideImage.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </UniformGrid>
                    -->
                    <WrapPanel Grid.Column="2">
                        <Button Content="Добавать картинку" Command="{Binding AddNewSlideImageCommand}"/>
                    </WrapPanel>
                </Grid>

            </TabItem>
        </TabControl>

        <Grid Name="SlidesGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Left"
                          Width="3"/>
            <ListBox Name="SlidesListBox"
                     ItemsSource="{Binding Path=Slides, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                     SelectedItem="{Binding SelectedSlide}"
                     Background="LightGray">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="10" Background="Snow">
                            <TextBlock Text="{Binding Path=Id, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
                            <Image Margin="10" Source="{Binding Image, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Panel.ZIndex="1"
                        Orientation="Horizontal">
                <Button Command="{Binding AddSlideCommand}" Content="+"
                        Width="25" Height="25" />
                <Button Command="{Binding DeleteSlideCommand}" Content="-" Width="25" Height="25"/>
            </StackPanel>

            <Viewbox Grid.Column="1" Stretch="Uniform" Margin="20 5">
                <Grid Width="720px" Height="480px">
                    <ListBox ItemsSource="{Binding Path=SelectedSlide.Images}"
                             SelectedItem="{Binding Path=SelectedSlideImage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Background="White"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Canvas.Left"
                                Value="{Binding Path=X}"/>
                                <Setter Property="Canvas.Bottom"
                                Value="{Binding Path=Y}"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path=ImageName, Converter={StaticResource PathToImageLoaderConverter}}"
                                       Width="{Binding Path=Width}"
                                       Height="{Binding Path=Height}"
                                       />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Name="TextBoxGrid" Panel.ZIndex="10" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="50 5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                        <TextBox Text="{Binding Path=SelectedSlide.Speaker, Mode=TwoWay}"
                            Name="SpeakerTextBox"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    Grid.Row="0"
                                    Padding="5"
                                    Background="Transparent"/>
                        <TextBox Text="{Binding Path=SelectedSlide.Text, Mode=TwoWay}" 
                                Grid.Row="1"
                                 Padding="20"
                                 Background="Transparent"/>
                        <Image Grid.RowSpan="2"/>

                    </Grid>
                    <Image Name="PreviewImage" 
                           Source="{Binding SelectedSlide.BackgroundImageName, Converter={StaticResource PathToImageLoaderConverter}, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                           Stretch="UniformToFill"/>
                </Grid>
            </Viewbox>

        </Grid>
        <StatusBar Grid.Row="2">
            <StatusBarItem Name="SlidesCountBarItem">
                <TextBlock >
                    <Run Text="Слайд"/>
                    <Run Text="{Binding SelectedSlide.Id, FallbackValue=0}"/>
                    <Run Text=" из "/>
                    <Run Text="{Binding Slides.Count, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
