<Window x:Class="NovelkaCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovelkaCreator"
        mc:Ignorable="d"
        Title="NovelkaCreator" Height="600" Width="1200">
    
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <!--#region TabMenu-->
        <TabControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <!--#region Файл-->
            <TabItem Header="Файл">
                <Canvas>
                </Canvas>
            </TabItem>
            <!--#endregion-->
            <TabItem Header="Главная"></TabItem>
            <TabItem Header="Задний фон"></TabItem>
            <TabItem Header="Объекты"></TabItem>
        </TabControl>
        <GridSplitter Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="6" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" ShowsPreview="True"/>
        <!--#endregion-->
        <!--#region Slides-->
        <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.RowSpan="3">
            <StackPanel x:Name="SlidesPanel" Grid.Row="1" Grid.Column="0" Grid.RowSpan="3"/>
        </ScrollViewer>
        <ScrollBar x:Name="SlidesScrollBar" 
            Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" HorizontalAlignment="Right" SmallChange="1" Maximum="5" ViewportSize="1" LargeChange="0"/>
        <GridSplitter ShowsPreview="True" Grid.Column="0" Grid.Row="1" 
                      Grid.RowSpan="3" Width="3" HorizontalAlignment="Right"/>
        <!--#endregion-->
       
        

    </Grid>
</Window>
